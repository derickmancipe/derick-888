const int TRIGG=PA10;
const int ECHO=PA8;
//const int led = PC13;
//const int led2 = PA4;
const int led3 = PA5;
//const int led4 = PA6;
const int zumb = PA7;
//const int zumb2 = PB0;
 
void setup() {
  Serial.begin(9600);
  pinMode(TRIGG, OUTPUT);
  pinMode(ECHO, INPUT);
  pinMode(led3, OUTPUT);
  pinMode(zumb, OUTPUT);
  
}
int cont = 0;
int pas = 0;
int cap;

void captura(){

  int cm = ping(TRIGG, ECHO);
  cap = cm;
  registro();
}

void registro(){

  digitalWrite(led3, LOW);
  digitalWrite(zumb, LOW);
  if(cap < 10)
  {
    Serial.println("Pasaje: $5200");
    digitalWrite(led3, HIGH);
    digitalWrite(zumb, HIGH);
    delay(200);
    digitalWrite(zumb, LOW);
    cont += 1;
    Serial.println("NÃºmero de pasajeros:");
    Serial.println(cont);
    pas = 5200 * cont;
    Serial.println("Total pasaje");
    Serial.println(pas);
    delay(2000);
    
    digitalWrite(led3, LOW);
  }
}

void loop() {
  
  captura();  
}

int ping(int TRIGG, int ECHO) {
  long duration, distanceCm;
  
  digitalWrite(TRIGG, LOW);  
  delayMicroseconds(2);
  digitalWrite(TRIGG, HIGH);  
  delayMicroseconds(10);
  digitalWrite(TRIGG, LOW);
  
  duration = pulseIn(ECHO, HIGH);  
  
  distanceCm = duration * 10 / 292/ 2;   

  return distanceCm;
}
